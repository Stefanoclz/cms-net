
@model Page;

<h1>CREATE</h1>

<form asp-controller="Page" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <strong>Inserisci il titolo della nuova pagina</strong>
        <input asp-for="@Model.Title" class="d-block w-100" />
    </div>
    

    <div class="text-end">
        <input type="submit" class="btn btn-small btn-info" value="Salva">
    </div>
</form>

<a class="btn-primary rounded-pill py-2 px-4" href="/Page/Index">Indietro</a>