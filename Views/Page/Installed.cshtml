@model List<Component>;


<h1>Quali componenti vuoi aggiungere?</h1>

@if(@Model != null && @Model.Count() > 0)
{
    @foreach(Component comp in @Model)
    {
        <div class="mb-3 d-flex">
            <span>@comp.Key</span>
            <span>@comp.PageId</span>
            <a href="@Url.Action("Create","Component",new{pageId = comp.PageId, key = comp.Key})">Aggiungi</a>
        </div>
    }
}
else
{
    <h2>
        Non ci sono componenti abilitati alla creazione, contatta il tuo Admin e riprova!
    </h2>
}
